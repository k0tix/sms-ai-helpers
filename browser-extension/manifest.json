{
    "manifest_version": 3,
    "name": "SMS AI HELPER",
    "version": "1.0.0",
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "js": [
                "src/content.ts"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ],
    "icons": {
        "32": "src/icons/favicon.png"
    }
}